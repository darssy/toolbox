    <Exec Command="dotnet nuget push &#45;&#45;source $(UserProfile)\.nuget\packages @(NugetFile)" />
  </Target>-->
  
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json">
      <Version>12.0.3</Version>
    </PackageReference>
    <PackageReference Include="NLog">
      <Version>4.4.12</Version>
    </PackageReference>
    <PackageReference Include="sharpconvert">
      <Version>1.1.0.4</Version>
    </PackageReference>
  </ItemGroup>
</Project>
